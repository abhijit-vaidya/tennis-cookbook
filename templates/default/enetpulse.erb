server {
        listen 80;
        index index.php;
  	server_name <%= @server_name %>;
  	charset     utf-8;
        root /opt/enetpulse_php/current;

        
location ~ \.php$ {
                try_files $uri =404;
                fastcgi_pass unix:/var/run/php5-fpm/<%= @server_name %>.socket;
                fastcgi_index index.php;
                include /etc/nginx/fastcgi_params;
        }

}
